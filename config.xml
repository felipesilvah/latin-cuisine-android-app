<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns       = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "ca.latincuisine.app"
        versionCode = ""
        version     = "1.0.0" >

	<name>Latin Cuisine Android App</name>

	<description>Best Latin Restaurants in Toronto</description>

	<author href="http://laticuisine.ca" email="felipesilvah@gmail.com">Latin Cuisine</author>

	<gap:platform name="android" />
	<preference name="android-build-tool" value="gradle" />

	<preference name="phonegap-version" value="cli-6.5.0" />
	<preference name="permissions" value="none"/>

	<preference name="disallowOverscroll" value="true" />
	<preference name="webviewbounce" value="false" />

	<!-- PhoneGap plugin declaration -->
	<plugin name="cordova-plugin-inappbrowser" source="npm" />
	<plugin name="cordova-plugin-network-information" source="npm" />
	<plugin name="cordova-plugin-whitelist" source="npm" />
	<plugin name="cordova-plugin-splashscreen" source="npm" />
	<plugin name="cordova-plugin-device" source="npm" />
	<plugin name="cordova-plugin-statusbar" source="npm" />
	<plugin name="cordova-plugin-crosswalk-webview" spec="1.5.0" source="npm" />

	<!-- Whitelist policy  -->
	<access origin="*" />
	<allow-intent href="*" />
	<allow-navigation href="*" />

	<!-- SplashScreen configuration -->
	<preference name="SplashScreen" value="splash" />
	<preference name="SplashScreenDelay" value="10000" />
	<preference name="FadeSplashScreenDuration" value="300" />
	<preference name="ShowSplashScreenSpinner" value="false" />

	<!-- Icons and Splashscreens declaration -->

	<icon src="icon.png" />
	    <icon src="icons/icon-wp-appkit-ldpi.png" gap:platform="android" gap:qualifier="ldpi" />
	    <icon src="icons/icon-wp-appkit-mdpi.png" gap:platform="android" gap:qualifier="mdpi" />
	    <icon src="icons/icon-wp-appkit-hdpi.png" gap:platform="android" gap:qualifier="hdpi" />
	    <icon src="icons/icon-wp-appkit-xhdpi.png" gap:platform="android" gap:qualifier="xhdpi" />
	    <gap:splash src="splash.png" />
	    <gap:splash src="splashscreens/splashscreen-wp-appkit-ldpi.png"  gap:platform="android" gap:qualifier="port-ldpi" />
	    <gap:splash src="splashscreens/splashscreen-wp-appkit-mdpi.png"  gap:platform="android" gap:qualifier="port-mdpi" />
	    <gap:splash src="splashscreens/splashscreen-wp-appkit-hdpi.png"  gap:platform="android" gap:qualifier="port-hdpi" />
	    <gap:splash src="splashscreens/splashscreen-wp-appkit-xhdpi.png" gap:platform="android" gap:qualifier="port-xhdpi" />
</widget>
